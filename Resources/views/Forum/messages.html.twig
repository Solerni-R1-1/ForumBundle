        <a class="slrn-read-faq pink_link" href="{{ path( 'solerni_static_page', { 'name': 'cms_faq' } ) }}">{{ 'read_faq'|trans({}, 'platform') }}</a>
        <h3 class="slrn-panel-title">{{ subject.getTitle() }}</h3>
        <div class="slrn-name-date">
          {{ 'started_by' | trans({}, 'forum') }}
