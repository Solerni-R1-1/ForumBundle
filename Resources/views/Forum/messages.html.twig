                         <div class="text-center slrn-message-horodatage">
                             {{ firstMessage.getCreationDate()|localizeddate( "short", "none", app.request.locale, null, 'd/MM/Y' ) ~ ' ' ~ firstMessage.getCreationDate() | date(hourFormat) }}
                         </div>
