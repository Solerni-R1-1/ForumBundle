                        {% if firstMessage.getCreator().getPicture() != "" %}
                             <img src="{{ image('uploads/pictures/' ~ firstMessage.getCreator().getPicture()).scaleResize(100, 100) }}" class="slrn-avatar-image">
                         {% else %}
